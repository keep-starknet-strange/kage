{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "app/*": [
        "./app/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "design/*": [
        "./design/*"
      ],
      "domain/*": [
        "./domain/*"
      ],
      "stores/*": [
        "./stores/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    }
  }
}