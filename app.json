{
  "expo": {
    "name": "kage",
    "slug": "kage",
    "scheme": "kage",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./kage-logo.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.starknet.kage",
      "appleTeamId": "4M48KC5QKH",
      "infoPlist": {
        "NSFaceIDUsageDescription": "We use Face ID to secure your data"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./favicon_kit/android-chrome-512x512.png",
        "backgroundColor": "#0B0F10"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.starknet.kage"
    },
    "web": {
      "favicon": "./favicon_kit/favicon-48x48.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-localization",
      [
        "expo-font",
        {
          "fonts": [
            "./resources/fonts/ubuntu-mono/UbuntuMono_400Regular_Italic.ttf",
            "./resources/fonts/ubuntu-mono/UbuntuMono_400Regular.ttf",
            "./resources/fonts/ubuntu-mono/UbuntuMono_700Bold_Italic.ttf",
            "./resources/fonts/ubuntu-mono/UbuntuMono_700Bold_Italic.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "UbuntuMono",
                "fontDefinitions": [
                  {
                    "path": "./resources/fonts/ubuntu-mono/UbuntuMono_400Regular_Italic.ttf",
                    "weight": 400,
                    "style": "italic"
                  },
                  {
                    "path": "./resources/fonts/ubuntu-mono/UbuntuMono_400Regular.ttf",
                    "weight": 400,
                    "style": "normal"
                  },
                  {
                    "path": "./resources/fonts/ubuntu-mono/UbuntuMono_700Bold_Italic.ttf",
                    "weight": 700,
                    "style": "italic"
                  },
                  {
                    "path": "./resources/fonts/ubuntu-mono/UbuntuMono_700Bold.ttf",
                    "weight": 700,
                    "style": "normal"
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./resources/fonts/ubuntu-mono/UbuntuMono_400Regular_Italic.ttf",
              "./resources/fonts/ubuntu-mono/UbuntuMono_400Regular.ttf",
              "./resources/fonts/ubuntu-mono/UbuntuMono_700Bold_Italic.ttf",
              "./resources/fonts/ubuntu-mono/UbuntuMono_700Bold.ttf"
            ]
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#0a0908",
          "image": "./resources/logo/kage-outline.png",
          "dark": {
            "image": "./resources/logo/kage-outline.png",
            "backgroundColor": "#0a0908"
          },
          "imageWidth": 160,
          "resizeMode": "native"
        }
      ],
      [
        "expo-web-browser",
        {
          "experimentalLauncherActivity": true
        }
      ],
      "expo-asset"
    ]
  }
}