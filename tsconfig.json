{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "res/*": [
        "./resources/*"
      ]
    },

    // Needed for class-transformer
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    // Optional in order to get tongo's types to work.
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "./styled.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
