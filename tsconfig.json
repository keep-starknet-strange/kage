{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./*"
      ],
      "app/*": [
        "./app/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "design/*": [
        "./design/*"
      ],
      "domain/*": [
        "./domain/*"
      ],
      "stores/*": [
        "./stores/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "./styled.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
