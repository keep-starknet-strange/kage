{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "res/*": [
        "./resources/*"
      ]
    },

    // Needed for class-transformer
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "./styled.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
